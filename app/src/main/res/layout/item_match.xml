<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txtAbbr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font_poppins_medium"
        android:textColor="@color/black_pearly"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="MS" />


    <TextView
        android:id="@+id/txtCardCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font_poppins_medium"
        android:textColor="@color/black_pearly"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0 - 0" />


    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_5"
        android:backgroundTint="@color/black_pearly"
        android:fontFamily="@font/font_poppins_medium"
        android:paddingHorizontal="6dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/txtAbbr"
        app:layout_constraintEnd_toStartOf="@+id/txtCardCount"
        app:layout_constraintStart_toEndOf="@+id/txtAbbr"
        app:layout_constraintTop_toTopOf="@+id/txtAbbr"
        tools:text="1-0" />

    <TextView
        android:id="@+id/txtHomeTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/font_poppins_regular"
        android:textColor="@color/black_pearly"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtScore"
        app:layout_constraintEnd_toStartOf="@+id/txtScore"
        app:layout_constraintTop_toTopOf="@+id/txtScore"
        tools:text="Gençlerbirligi" />

    <TextView
        android:id="@+id/txtAwayTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/font_poppins_regular"
        android:textColor="@color/black_pearly"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtScore"
        app:layout_constraintStart_toEndOf="@+id/txtScore"
        app:layout_constraintTop_toTopOf="@+id/txtScore"
        tools:text="Gençlerbirligi" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        android:background="@color/alpine_goat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtScore" />

</androidx.constraintlayout.widget.ConstraintLayout>