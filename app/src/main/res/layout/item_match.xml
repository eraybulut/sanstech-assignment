<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtAbbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:fontFamily="@font/font_roboto_bold"
            android:maxLength="5"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="MS" />

        <TextView
            android:id="@+id/txtHomeTeam"
            android:layout_width="0dp"
            android:layout_marginStart="4dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/bold_roboto_regular"
            android:maxLines="1"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="Gençlerbirligi" />

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/rounded_5"
            android:backgroundTint="@color/black_pearly"
            android:fontFamily="@font/font_roboto_medium"
            android:paddingHorizontal="6dp"
            android:textColor="@color/white"
            tools:text="1-0" />

        <TextView
            android:id="@+id/txtAwayTeam"
            android:layout_width="0dp"
            android:layout_marginEnd="4dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/bold_roboto_regular"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="Gençlerbirligi" />

        <TextView
            android:id="@+id/txtCardCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:fontFamily="@font/font_roboto_bold"
            android:gravity="end|center"
            android:textColor="@color/black_pearly"
            android:textSize="10sp"
            tools:text="0 - 0" />

        <ImageView
            android:id="@+id/icStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@drawable/ic_star_outline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCardCount" />
    </LinearLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/alpine_goat"/>

</LinearLayout>